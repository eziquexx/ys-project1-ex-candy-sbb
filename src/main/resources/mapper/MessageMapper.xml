<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ys.project1.ex.sbb.candy.MessageMapper">
	<select id="getMessageById" resultType="com.ys.project1.ex.sbb.candy.Message">
		SELECT * FROM hello WHERE id = #{id}
	</select>
	<select id="getMessageList" resultType="com.ys.project1.ex.sbb.candy.Message">
		SELECT * FROM hello ORDER BY id DESC LIMIT 20;
	</select>
</mapper>